<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_team_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    app:layout_constraintHorizontal_chainStyle="spread_inside">

    <ImageView
        android:id="@+id/img_team_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_name"
        app:layout_constraintWidth_percent="0.15" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@+id/img_team_logo"
        app:layout_constraintBottom_toBottomOf="@+id/img_team_logo"
        app:layout_constraintEnd_toStartOf="@+id/txt_win"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_team_logo" />


    <TextView
        android:id="@+id/txt_win"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@+id/img_team_logo"
        app:layout_constraintBottom_toBottomOf="@+id/img_team_logo"
        app:layout_constraintEnd_toStartOf="@+id/txt_lose"
        app:layout_constraintHorizontal_weight="0.15"
        app:layout_constraintStart_toEndOf="@+id/txt_name" />

    <TextView
        android:id="@+id/txt_lose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@+id/img_team_logo"
        app:layout_constraintBottom_toBottomOf="@+id/img_team_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.15"
        app:layout_constraintStart_toEndOf="@+id/txt_win" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/img_team_logo" />


</android.support.constraint.ConstraintLayout>